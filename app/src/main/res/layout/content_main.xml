<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/statusText" android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/find_nodes" app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:id="@+id/find_nodes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="findNodes"
            android:text="@string/action_find_nodes"
            style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintStart_toEndOf="@+id/statusText"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="437dp"
            app:layout_constraintBottom_toTopOf="@+id/editText" app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/receivedMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/find_nodes" app:layout_constraintTop_toTopOf="@+id/find_nodes"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="97dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="24dp" app:layout_constraintTop_toBottomOf="@+id/find_nodes"/>

</androidx.constraintlayout.widget.ConstraintLayout>